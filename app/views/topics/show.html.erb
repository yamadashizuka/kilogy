<h1><%= t('views.topic.show') %></h1>

<p id="notice"><%= notice %></p>

<p>
  <strong><%= t('activerecord.attributes.topic.title') %>:</strong>
  <%= @topic.title %>
</p>

<p>
  <strong><%= t('activerecord.attributes.topic.name') %>:</strong>
  <%= @topic.name %>
</p>

<p>
  <strong><%= t('activerecord.attributes.topic.description') %>:</strong>
  <%= simple_format(@topic.description) %>
</p>

<p>
  <strong><%= t('activerecord.attributes.topic.flag_id') %>:</strong>
  <%= @topic.flag.name %>
</p>

<p>
  <strong><%= t('activerecord.attributes.topic.created_at') %>:</strong>
  <%= @topic.created_at %>
</p>

<p>
  <strong><%= t('activerecord.attributes.topic.updated_at') %>:</strong>
  <%= @topic.updated_at %>
</p>

